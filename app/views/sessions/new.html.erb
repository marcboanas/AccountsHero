<% provide(:title, "Sign in") %>

<div class="row">
    <%= simple_form_for(:session, url: sessions_path) do |f| %>

      <%= f.input :email, placeholder: "Email" %>
      
      <%= f.input :password, placeholder: "Password" %>

      <%= f.submit "Sign in to your Account", class: "btn btn-large btn-primary" %>
    <% end %>
</div>
<div class="row">
    <p><%= link_to "forgotten password?", new_password_reset_path, class: "black" %></p>
</div>

